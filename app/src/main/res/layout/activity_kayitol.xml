<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".Giris">


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />


    <ImageView
        android:id="@+id/ust"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ust" />


    <ImageView
        android:id="@+id/logo2"
        android:layout_width="289dp"
        android:layout_height="167dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo1" />

    <ImageView
        android:id="@+id/login1"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/logo2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login1" />

    <ImageView
        android:id="@+id/login2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login1"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login3" />

    <ImageView
        android:id="@+id/login3"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/login2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login3" />


    <ImageView
        android:id="@+id/login4"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/login3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login2" />

    <EditText
        android:id="@+id/eposta"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login1"
        android:layout_below="@+id/logo2"
        android:hint="E-Posta "
        android:imeActionId="6"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ad"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login2"
        android:layout_below="@+id/login1"
        android:layout_marginTop="3dp"
        android:hint="Ad"
        android:imeActionId="6"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/soyAd"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login3"
        android:layout_below="@+id/login2"
        android:layout_marginTop="3dp"
        android:hint="Soyad "
        android:imeActionId="6"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login4"
        android:layout_below="@+id/login3"
        android:layout_marginTop="3dp"
        android:hint="Parola"
        android:imeActionId="6"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
        android:textColorHint="#000000"
        android:textSize="18sp" />


    <Button
        android:id="@+id/kayitOl"
        android:background="@drawable/kayit"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login4"
        android:layout_alignEnd="@+id/login4"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/geri"
        android:background="@drawable/geridon"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login4"
        android:layout_alignStart="@+id/login4"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>